<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <div class="main-content">
        <header>
            <nav class="navbar navbar-expand navbar-light mb-3 border-bottom">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Сиписок</a>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="HyperLink">Редактирование</a>
                        </li>
                    </ul>
                   
                </div>
            </nav>
        </header>
        <main class="container">
            @RenderBody()
        </main>
        
    </div>
    <footer class="border-top footer text-muted">
        <div class="container my-3">
            Приложение для создания коротких ссылок
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>